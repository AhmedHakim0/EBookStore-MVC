@using EBookStore.Models.Models
@model List<Product>
	
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-4">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Product List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-2">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Product
				</a>
			</div>

			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>
							Title
						</th>
						<th>
							ISBN
						</th>
						<th>
							Author
						</th>
						<th>
							ListPrice
						</th>
						<th>
							Price
						</th>
						<th>
							Category
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var obj in Model)
					{
						<tr>
							<td>@obj.Title</td>
							<td>@obj.ISBN</td>
							<td>@obj.Author</td>
							<td>@obj.ListPrice</td>
							<td>@obj.Price</td>
							<td>@obj.CategoryId</td>
							<td>
								<a asp-area="Admin" asp-controller="Product" asp-action="Edite" asp-route-id="@obj.Id" class="btn btn-success">
									<i class="bi bi-pencil-square"></i> Edite Product
								</a>
								<a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
									<i class="bi bi-trash"></i> Delete Product
								</a>
							</td>
						</tr>
					}
				</tbody>

			</table>
	</div>
</div>

