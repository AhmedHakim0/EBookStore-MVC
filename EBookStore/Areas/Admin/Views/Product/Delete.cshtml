@using EBookStore.Models.Models
@model Product

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-4">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<div class="border p-3 mt-4">

				<div class="form-floating py-2 col-12">
					<label asp-for="Title" class="ms-2 p-2"></label>
					<input asp-for="Title" readonly class="form-control border-0 shadow">
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<label asp-for="Description" class="ms-2 p-2"></label>
					<textarea asp-for="Description" readonly class="form-control border-0 shadow"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<label asp-for="ISBN" class="ms-2 p-2"></label>
					<input asp-for="ISBN" readonly class="form-control border-0 shadow">
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<label asp-for="Author" class="ms-2 p-2"></label>
					<input asp-for="Author" readonly class="form-control border-0 shadow">
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<label asp-for="ListPrice" class="ms-2 p-2"></label>
					<input asp-for="ListPrice" readonly class="form-control border-0 shadow">
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<label asp-for="Price" class="ms-2 p-2"></label>
					<input asp-for="Price" readonly class="form-control border-0 shadow">
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<label asp-for="Price50" class="ms-2 p-2"></label>
					<input asp-for="Price50" readonly class="form-control border-0 shadow">
					<span asp-validation-for="Price50" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<label asp-for="Price100" class="ms-2 p-2"></label>
					<input asp-for="Price100" readonly class="form-control border-0 shadow">
					<span asp-validation-for="Price100" class="text-danger"></span>
				</div>
				

				<div class="row p-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back To List </a>
					</div>

				</div>
			</div>

		</form>
	</div>
</div>



@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}