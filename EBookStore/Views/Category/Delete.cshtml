@model Category

<form method="post">
	<div class="border p-3 mt-4">

		<div class="row pb-3">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-1 text-light"></label>
			<input asp-for="Name" readonly class="form-control">
		
		</div>

		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-1 text-light"></label>
			<input asp-for="DisplayOrder" readonly class="form-control">
			
		</div>

		<div class="row">
			<div class="col-6 col-mb-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-mb-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back To List </a>
			</div>

		</div>
	</div>

</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}